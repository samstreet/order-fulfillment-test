<?xml version="1.0"?>
<ruleset name="Order Fulfillment PSR-12">
    <description>PSR-12 Coding Standard with additional rules</description>

    <!-- Use PSR-12 as the base -->
    <rule ref="PSR12"/>

    <!-- Additional rules for strict type declarations -->
    <rule ref="Generic.PHP.RequireStrictTypes">
        <!-- Exclude Laravel scaffold files from strict_types requirement -->
        <exclude-pattern>*/config/*</exclude-pattern>
        <exclude-pattern>*/routes/*</exclude-pattern>
        <exclude-pattern>*/database/migrations/0001_01_01_*</exclude-pattern>
        <exclude-pattern>*/database/factories/UserFactory.php</exclude-pattern>
        <exclude-pattern>*/database/seeders/DatabaseSeeder.php</exclude-pattern>
        <exclude-pattern>*/app/Http/Controllers/Controller.php</exclude-pattern>
        <exclude-pattern>*/tests/Unit/ExampleTest.php</exclude-pattern>
        <exclude-pattern>*/tests/Feature/ExampleTest.php</exclude-pattern>
        <exclude-pattern>*/tests/TestCase.php</exclude-pattern>
        <exclude-pattern>*/app/Models/User.php</exclude-pattern>
    </rule>

    <!-- Allow snake_case test method names (PHPUnit convention) -->
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <!-- Files to check -->
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <file>tests</file>

    <!-- Exclude vendor and other directories -->
    <exclude-pattern>*/bootstrap/*</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/_ide_helper.php</exclude-pattern>
    <exclude-pattern>*.blade.php</exclude-pattern>

    <!-- Show progress -->
    <arg value="ps"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="ns"/>

    <!-- Parallel processing for faster results -->
    <arg name="parallel" value="8"/>

    <!-- Additional rules for code quality -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Generic.CodeAnalysis.EmptyStatement"/>
    <rule ref="Generic.CodeAnalysis.UnconditionalIfStatement"/>
    <rule ref="Generic.CodeAnalysis.UnnecessaryFinalModifier"/>
    <rule ref="Generic.Commenting.Todo"/>
    <rule ref="Generic.Commenting.Fixme"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>
</ruleset>
